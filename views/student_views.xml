<odoo>
    <!-- Action to open Student records -->
    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Form View -->
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.form</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date_of_birth"/>
                        <field name="email"/>
                        <field name="gender"/>
                        <field name="contact_no"/>
                        <field name="address"/>
                    </group>
                    <notebook>
                        <page string="Enrollment Information">
                            <!-- Fields related to enrollment -->
                            <group>
                                <field name="student_id"/>
                                <field name="course_id"/>
                            </group>
                        </page>
                        <page string="Achievements">
                            <group>
                                <!-- <field name="achievement_ids" widget="many2many_tags"/> -->
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">student.tree</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="contact_no"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <!-- Search view for Student records -->
    <record id="student_view_search" model="ir.ui.view">
        <field name="name">student.view.search</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <search string="Search Students">
                <field name="name"/>
                <field name="email"/>
                <field name="contact_no"/>
                <field name="gender"/>
            </search>
        </field>
    </record>
</odoo>













